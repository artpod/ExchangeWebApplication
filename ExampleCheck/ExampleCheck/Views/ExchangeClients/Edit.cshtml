@model ExampleCheck.ExchangeClient

@{
    ViewData["Title"] = "Edit";
}

<h1>Редагувати</h1>

<h4>Клієнт біржі</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Exchange" class="control-label"></label>
                <select asp-for="Exchange" class="form-control" asp-items="ViewBag.Exchange"></select>
                <span asp-validation-for="Exchange" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExchangeClient1" class="control-label"></label>
                <select asp-for="ExchangeClient1" class="form-control" asp-items="ViewBag.ExchangeClient1"></select>
                <span asp-validation-for="ExchangeClient1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутись назад</a>
</div>

